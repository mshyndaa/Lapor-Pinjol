@{
    ViewData["Title"] = "Search";
}

<h1>Search By Name Form</h1>

<p>Please enter your keyword below!</p>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ShowNameSearchResult">
            <div class="form-group">
                <label for="SearchPhrase" class="control-label">Nama Pinjaman Online</label>
                <input name="SearchPhrase" class="form-control" />
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
